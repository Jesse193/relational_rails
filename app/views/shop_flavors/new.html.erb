<%= form_with url: "/shops/#{@shop.id}/flavors", method: :post, local: true do |form| %>
  <%= form.label :flavor %>
  <%= form.text_field :flavor %>
  <%= form.label :nut_free %>
  <%= form.text_field :nut_free %>
  <%= form.label :calories %>
  <%= form.text_field :calories %>
  <%= form.submit "Create Flavor" %>
<% end %>